<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Entry System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 800px;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .table-responsive {
            margin-top: 30px;
        }
        .table {
            border-collapse: collapse;
        }
        .table th, .table td {
            padding: 12px;
        }
        .no-records {
            text-align: center;
            padding: 20px;
            color: #666;
        }
        .btn-primary {
            background-color: #4a6fa5;
            border-color: #4a6fa5;
        }
        .btn-primary:hover {
            background-color: #3a5a80;
            border-color: #3a5a80;
        }
        .record-animation {
            animation: fadeIn 0.5s;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Data Entry System</h1>
        </div>
        
        <form id="dataForm">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="dateInput" class="form-label">Date:</label>
                        <input type="text" class="form-control" id="dateInput" placeholder="Select date">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="idInput" class="form-label">ID:</label>
                        <input type="text" class="form-control" id="idInput" placeholder="Enter ID">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="reasonInput" class="form-label">Reason:</label>
                        <input type="text" class="form-control" id="reasonInput" placeholder="Enter reason">
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        
        <div class="table-responsive mt-4">
            <h3>Records</h3>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>ID</th>
                        <th>Reason</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="recordsTable">
                    <tr class="no-records">
                        <td colspan="5">No records found. Please add data.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 初始化日期選擇器
        flatpickr("#dateInput", {
            dateFormat: "Y/m/d",
            altInput: true,
            altFormat: "F j, Y",
            locale: {
                firstDayOfWeek: 1 // 週一作為一週的第一天
            }
        });

        // 管理記錄的陣列
        let records = [];

        // 表單提交處理
        document.getElementById('dataForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // 獲取表單數據
            const date = document.getElementById('dateInput').value;
            const id = document.getElementById('idInput').value;
            const reason = document.getElementById('reasonInput').value;
            
            // 驗證
            if (!date || !id || !reason) {
                alert('Please fill in all fields');
                return;
            }
            
            // 添加到記錄
            records.push({
                date: date,
                id: id,
                reason: reason
            });
            
            // 更新表格
            updateTable();
            
            // 重置表單
            this.reset();
        });
        
        // 更新表格函數
        function updateTable() {
            const tableBody = document.getElementById('recordsTable');
            
            // 如果有記錄，清除"無記錄"消息
            if (records.length > 0) {
                tableBody.innerHTML = '';
            }
            
            // 添加所有記錄到表格
            records.forEach((record, index) => {
                const row = document.createElement('tr');
                row.className = 'record-animation';
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${record.date}</td>
                    <td>${record.id}</td>
                    <td>${record.reason}</td>
                    <td>
                        <button class="btn btn-sm btn-danger" onclick="deleteRecord(${index})">Delete</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
            
            // 如果沒有記錄，顯示"無記錄"消息
            if (records.length === 0) {
                tableBody.innerHTML = `
                    <tr class="no-records">
                        <td colspan="5">No records found. Please add data.</td>
                    </tr>
                `;
            }
        }
        
        // 刪除記錄函數
        function deleteRecord(index) {
            if (confirm('Are you sure you want to delete this record?')) {
                records.splice(index, 1);
                updateTable();
            }
        }
    </script>
</body>
</html>

